[colors]

base00 = #1d1f21
base01 = #282a2e
base02 = #373b41
base03 = #969896
base04 = #4BD3B1
base05 = #c5c8c6
base06 = #e0e0e0
base07 = #ffffff
base08 = #cc6666
base09 = #de935f
base0A = #f0c674
base0B = #b5bd68
base0C = #8abeb7
base0D = #81a2be
base0E = #b294bb
base0F = #a3685a

background = #1b2b34
foreground = #d8dee9

red    = #ec5f67
orange = #f99157
yellow = #fac863
green  = #99c794
teal   = #5fb3b3
blue   = #6699cc
purple = #c594c5
brown  = #ab7967

[bar/master]
monitor = ${env:MONITOR:eDP1}
fixed-center = true

width = 100%
height = 28

radius = 0.0

module-margin = 2
background = ${colors.background}
foreground = ${colors.base04}

font-0 = "GohuFont:pixelsize=9:antialias=false;1"
font-1 = wuncon siji:pixelsize=6;2
font-2 = "FontAwesome:pixelsize=9:antialias=false;1"
font-3 = "UW Ttyp0:pixelsize=9:antialias=false;1"

[bar/match]
inherit = bar/master
top = true

modules-left = workspaces
modules-center =
modules-right = down essid backlight volume battery time

padding-left = 3
padding-right = 3

accumulate-stats = true

[module/network]
type = internal/network
interface = wlp6s0
ping-interval = 3

[module/music]
type = custom/script
interval = 2

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.blue}
label = %output:0:45:...%

exec = /home/dead/.config/polybar/scripts/music.sh
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next

[module/volume]
type = internal/volume

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-foreground = ${colors.base0C}
format-volume = <ramp-volume> <label-volume>

format-muted = <label-muted>
label-muted = mute
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.base08}

mapping = true

[module/title]
type = internal/xwindow

format-prefix = " "
format-prefix-foreground = ${colors.purple}

label = "%title:0:25:...%"

[module/cpu]
type = internal/cpu
interval = 2

format-prefix = ""
format-prefix-foreground = ${colors.blue}

label = "%percentage%%"
label-padding-left = 1

[module/ram]
type = internal/memory
interval = 3

format-prefix = ""
format-prefix-foreground = ${colors.orange}

label = "%percentage_used%%"
label-padding-left = 1

[module/essid]
inherit = module/network

format-connected = <ramp-signal> <label-connected>

format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-foreground = ${colors.green}

label-connected = "%essid%"
label-disconnected = "not connected"
label-connected-padding-left = 1
label-disconnected-padding-left = 1

ramp-signal-0 = ""
ramp-signal-1 = ""
ramp-signal-2 = ""
ramp-signal-3 = ""
ramp-signal-4 = ""
ramp-signal-5 = ""

ramp-signal-foreground = ${colors.green}

[module/up]
inherit = module/network

format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.green}

label-connected = %{T2}%upspeed:9%%{T-}
label-padding-left = 1

[module/down]
inherit = module/network

format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.base0B}

label-connected = %{T2}%downspeed:9%%{T-}

[module/i3workspaces]
type = internal/i3
format = <label-mode> <label-state>
index-sort = true

label-focused = ""
label-unfocused = ""
label-urgent = ""
label-visible = ""

label-focused-foreground = ${colors.blue}
label-focused-padding = 1

label-unfocused-foreground = ${colors.base03}
label-unfocused-padding = 1

label-visible-foreground = ${colors.base03}
label-visible-padding = 1

label-urgent-foreground = ${colors.base08}
label-urgent-padding = 1

[module/backlight]
type = internal/backlight
card = intel_backlight

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.yellow}

format = <ramp> <label>
label = %percentage%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging><label-charging>
label-charging = %percentage%%
label-charging-padding-left = 1

format-discharging = <ramp-capacity><label-discharging>
label-discharging = %percentage%%
label-discharging-padding-left = 1

format-full = " 100%"
format-full-prefix = ""
format-full-prefix-foreground = ${colors.green}
format-full-padding-left = 1

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
ramp-capacity-5 = ""
ramp-capacity-6 = ""
ramp-capacity-7 = ""
ramp-capacity-8 = ""
ramp-capacity-foreground = ${colors.green}

animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""
animation-charging-5 = ""
animation-charging-6 = ""
animation-charging-7 = ""
animation-charging-8 = ""
animation-charging-foreground = ${colors.base0B}
animation-charging-framerate = 750

[module/time]
type = internal/date
interval = 1
date =
time = "%I:%M %P"
format-prefix = " "
format-prefix-foreground = ${colors.red}
label = %time% %date%

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
format-padding = 1
Additional formatting
icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-5 = 6;
icon-6 = 7;
icon-7 = 8;
icon-8 = 9;
icon-9 = 10;
;icon-default = 

;

format = <label-state>
label-monitor =  %name%


label-active = " %icon% "
label-active-foreground = #4BD3B1
label-active-background = ${colors.base02}
;label-active-underline = #F5166A

label-occupied = " %icon%"
label-occupied-underline = #EFC8AA
label-occupied-background = #3a3c61
label-occupied-foreground = #34C8BC

label-urgent = " %icon%  "
label-urgent-foreground = #ffffff
label-urgent-background = #3a3c61
label-urgent-underline = #34C8BC

label-empty = " %icon% "
label-empty-foreground = #ffffff


[settings]
screenchange-reload = true

[global/wm]
margin-top = 24
margin-bottom = 24

override-redirect = true

; vim:ft=dosini
