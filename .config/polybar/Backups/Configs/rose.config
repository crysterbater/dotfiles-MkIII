[colors]
background = #051519
foreground = #ffffff
foregroundalt = #c1c1c1
urgent = #FF6347
;accent = #FF5E8E
;accent = #DD7575
; cool red
accent = #DD7575
;accent = #54bb6f

[bar/rose]
monitor = ${env:MONITOR:eDP1}
width = 75%
height = 30
offset-x = 300
offset-y = 1%
radius = 5
fixed-center = false
;override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00
border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=8;2
font-1 = Wuncon Siji:pixelsize=10;2
font-2 = fontawesome:pixelsize=10;1
font-3 = icomoon :size=9:;1

modules-left = workspaces config
modules-center = mpd
modules-right =   battery network volume date

tray-position = right
tray-background = #222

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

enable-scroll = false

format = <label-state><label-mode>
format-padding = 2
format-background = #EAAFAF

inline-mode = true

ws-icon-default = 

label-focused = 
label-focused-foreground = #000000

label-occupied = %icon%
label-occupied-foreground = #1B2443

label-urgent = %icon%
label-urgent-foreground = #31ABDE

label-empty = %icon%
label-empty-foreground = #FFFFFF



[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
format-padding = 1
Additional formatting
icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-5 = 6;
icon-6 = 7;
icon-7 = 8;
icon-8 = 9;
icon-9 = 10;
;icon-default = 

;

format = <label-state>
label-monitor =  %name%

label-active = " %icon% %name% "
label-active-foreground = #ffffff
label-active-background = #F77B89
label-active-underline = #19BEBC

label-occupied = " %icon% %name% "
label-occupied-underline = #EFC8AA
label-occupied-background = #1E232B
label-occupied-foreground = #34C8BC

label-urgent = " %icon% %name% "
label-urgent-foreground = #ffffff
label-urgent-background = #007086
label-urgent-underline = #34C8BC

label-empty = " %icon% %name% "
label-empty-foreground = #ffffff

[module/workspace]
type = custom/script
interval = 1
label = %{A4:wmctrl -s "$(($(xprop -root _NET_CURRENT_DESKTOP | cut -d '=' -f 2 | cut -d ' ' -f 2)+1))":}%{A5:wmctrl -s "$(($(xprop -root _NET_CURRENT_DESKTOP | cut -d '=' -f 2 | cut -d ' ' -f 2)-1))":}%output% %{A}%{A}
exec = echo "$(($(xprop -root _NET_CURRENT_DESKTOP | cut -d '=' -f 2 | cut -d ' ' -f 2)+1))"
label-background = #0B1219
label-foreground = #13181D
format = <label>
;format-prefix = " "
format-prefix-foreground = #F5166A

[module/menu]
type = custom/menu

format-spacing = 1
label-open = "  "
label-open-foreground = #ffffff
label-closed-background = #FAFDFF
label-close = "  "
label-close-foreground = #BA386F
label-separator = "│"
label-separator-foreground = #F9987D
menu-0-0 = Most Used
menu-0-0-exec = menu-open-1
menu-0-1 = Ricing
menu-0-1-exec = menu-open-2
menu-0-2 = Media
menu-0-2-exec = menu-open-3
menu-0-3 = 
menu-0-3-exec = menu-open-4

menu-1-0 = "  "
menu-1-0-exec = exo-open --launch vivaldi-snapshot
menu-1-1 = "  "
menu-1-1-exec = exo-open --launch xfce4-terminal
menu-1-2 = "  "
menu-1-2-exec = exo-open --launch thunar
menu-1-3 = "  "
menu-1-3-exec = atom

menu-2-0 = "  "
menu-2-0-exec = gcolor2
menu-2-1 = "  "
menu-2-1-exec = spotify --force-device-scale-factor=1.5
menu-2-2 = "  "
menu-2-2-exec = wpg
menu-2-3 = "  "
menu-2-3-exec = yakyak
menu-2-4 = "  "
menu-2-4-exec = lxappearance
menu-2-5 = "  "
menu-2-5-exec = scrot %F-%S_$wx$h_scrot.png -e 'mv $f ~/images'

menu-3-0 = "  "
menu-3-0-exec = audacious &
menu-3-1 = "  "
menu-3-1-exec = playerctl stop
menu-3-2 = "  "
menu-3-2-exec = playerctl previous
menu-3-3 = "  "
menu-3-3-exec = playerctl play-pause
menu-3-4 = "  "
menu-3-4-exec = playerctl next

menu-4-0 = "  "
menu-4-0-exec = slimlock
menu-4-1 = "  "
menu-4-1-exec = systemctl reboot
menu-4-2 = "  "
menu-4-2-exec = systemctl poweroff

[module/gmail]
type = custom/script
exec = ~/.config/polybar/gmail/launch.py
tail = true
click-left = xdg-open https://mail.google.com

[module/network]
type = custom/script
background = #051519
foreground  = #ffffff
exec = $HOME/.config/polybar/scripts/network.sh
click-left = networkmanager_dmenu
click-right = networkmanager_dmenu
label-padding = 1
interval = 1
tail = true

[module/date]
type = internal/date
label-background = ${colors.accent}
label = %date% %time%
label-padding = 2
date = %a %d
time = %H:%M:%S
interval = 1

[module/volume]
type = internal/volume

volume-foreground = #222

format-volume = <ramp-volume>
module-margin-right = 1
;ramp-volume-0 = 
;ramp-volume-1 = 
;ramp-volume-2 = 

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted = muted

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 97

format-charging = <animation-charging> <label-charging>
format-charging-background = ${colors.accent}

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix-foreground = ${colors.foreground}

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
;ramp-capacity-foreground = ${colors.accent}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
;animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/window_count]
type = custom/script
interval = 1
label = %{A1:skippy-xd --toggle-window-picker:}   %output%  %{A}
exec = echo "$(($(wmctrl -l -i | wc -l)-1))"
format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.fg-alt}
format-padding = 1

[module/config]
type = custom/script
exec = echo ""
interval = 5

label = %output%
label-padding = 2
format = <label>
;exec = echo " "
click-left = /home/pringle/go/bin/gorice dump i3 /home/pringle/.gorice/output.yaml.template; /home/pringle/bin/config_ui &
click-middle = /home/pringle/go/bin/gorice dump .i3 /home/pringle/.gorice/output.yaml.template; /home/pringle/bin/config_ui &
click-right = termite "--exec=gorice edit i3/neon" &

[module/rofi]
type = custom/script
exec = echo " "
click-left = /home/pringle/.config/polybar/polybar/wal/powermenu.sh
label-foreground = #ffffff
label-background = #1D2021
format-padding = 1
label-prefix = 

[global/wm]
margin-top = 5
margin-bottom = 5
