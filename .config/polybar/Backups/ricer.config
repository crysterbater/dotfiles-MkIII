
[colors]
background = #0C1015
foreground = #C4CEDC
green = #89DCB3
gray = #C4CEDC

include-file = /home/oula/.config/polybar/colors

[bar/ricer]
monitor = eDP1
width = 100%
height = 28
offset-x = 0
offset-y = 0
bottom = true

override-redirect = false
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

border-bottom-size = 0
border-top-size = 4
border-color = ${colors.transparentBackgrnd}

underline-size = 3
underline-color = ${colors.green}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = GohuFont:pixelsize=11;1
font-1 = Siji:size=10;1

modules-left = powermenu bspwm
modules-center = mpd
modules-right = volume date

;tray-position = right
;tray-padding = 2
;tray-background = #66333333

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

; MODULES

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

ws-icon-0 = I;î€
ws-icon-1 = II;î€
ws-icon-2 = III;î€
ws-icon-3 = IV;î€
ws-icon-4 = V;î€
ws-icon-default = î€

label-focused = î€€
label-focused-background = ${colors.alt-background}
label-focused-underline= ${colors.green}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.dim-foreground}
label-empty-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 0

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = "%a %b %d "

; Optional time format
time = "%H:%M "

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %A, %d %B %Y
time-alt = "%H:%M:%S "

label = %date% %time%
format = îˆ¥ <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 1

