[bar/dummy]
width = 1
height = 35
modules-left = empty-space
background = 0

[bar/dummy-second]
width = 1
height = 35
modules-left = empty-space
background = 0

monitor = eDP1

[module/empty-space]
type = custom/text
content = " "

[bar/top-left]
width = 24%
height = 35
offset-x = 10
offset-y = 5

monitor = eDP1

background = #141021
foreground = #c4b7c5

fixed-center = false

font-0 = UbuntuMono Nerd Font Mono:style=Regular:pixelsize=10:weight=bold;3
font-1 = icomoon:style=Regular:pixelsize=12:weight=bold;3

modules-left = powermenu workspaces

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

wm-restack = i3
override-redirect = true

[bar/top-center]
width = 10%
height = ${bar/top-left.height}
offset-x = 45%
offset-y = ${bar/top-left.offset-y}

monitor = ${bar/top-left.monitor}

background = ${bar/top-left.background}
foreground = ${bar/top-left.foreground}

fixed-center = true

font-0 = ${bar/top-left.font-0}

modules-center = date

wm-restack = i3
override-redirect = true

[bar/top-right]
width = 30%
height = ${bar/top-left.height}
offset-x = 1337
offset-y = ${bar/top-left.offset-y}

monitor = ${bar/top-left.monitor}

background = ${bar/top-left.background}
foreground = ${bar/top-left.foreground}

fixed-center = true

font-0 = ${bar/top-left.font-0}
font-1 = ${bar/top-left.font-1}


modules-left =
modules-right = volume wireless-network memory cpu

wm-restack = i3
override-redirect = true

[bar/top]
width = 100%
height = 40

monitor = eDP1

background = #141021
foreground = #c4b7c5

fixed-center = true

font-0 = UbuntuMono Nerd Font Mono:style=Regular:pixelsize=12:weight=bold;0

modules-left = i3
modules-center = date spotify
modules-right = wireless-network cpu memory pavolume powermenu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/top-second-left]
width = 30%
height = 35
offset-x = 10
offset-y = 5

monitor = eDP1

background = #141021
foreground = #c4b7c5

fixed-center = false

font-0 = UbuntuMono Nerd Font Mono:style=Regular:pixelsize=12:weight=bold;0

modules-left = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

wm-restack = i3
override-redirect = true

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
format-padding = 1
Additional formatting
icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-5 = 6;
icon-6 = 7;
icon-7 = 8;
icon-8 = 9;
icon-9 = 10;
;icon-default = 

;

format = <label-state>
label-monitor =  %name%

label-active = " %icon% %name% "
label-active-foreground = #FF2B91
label-active-background =#141021


label-occupied = " %icon% %name% "
label-occupied-underline = #EFC8AA
label-occupied-background = #f7f3ee
label-occupied-foreground = #34C8BC

label-urgent = " %icon% %name% "
label-urgent-foreground = #ffffff
label-urgent-background = #007086
label-urgent-underline = #34C8BC

label-empty = " %icon% %name% "
label-empty-foreground = #8a7f8f

[module/i3]
type = internal/i3

pin-workspaces = true

strip-wsnumbers = false
index-sort = true
enable-scroll = false

format = <label-state>
format-padding-right = 2

label-unfocused-foreground = #8a7f8f
label-unfocused-padding = 1

label-focused-foreground = #c16772
label-focused-padding = 1

label-urgent-foreground = #e4b226
label-urgent-padding = 1


[module/cpu]
type = internal/cpu

interval = 1

format = <label>
format-padding = 2

label =  %percentage%%
label-foreground = #3EDDF0


[module/memory]
type = internal/memory

interval = 1

format = <label>
format-padding = 1

label =  R %percentage_used%%


[module/date]
type = internal/date

interval = 1

date = %a %b %d,
time = %H:%M:%S

date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

format = <label>
format-padding = 2

label =  %time%


[module/battery]
type = internal/battery

full-at = 100

battery = BAT1
adapter = ACAD

poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-charging-padding = 2

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 2

format-full = <ramp-capacity> <label-full>
format-full-padding = 2

label-charging = %percentage%%

label-discharging = %percentage%%

label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500
label-foreground = #3EDDF0



[module/backlight]
type = internal/backlight

card = intel_backlight

format = <label>
format-padding = 2

label =  %percentage%%

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>

format-volume-background = #141021
format-volume-padding = 2

module-margin-right = 0
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =
ramp-volume-3 =
ramp-volume-foreground = #3EDDF0



label-muted =  muted


[module/pavolume]
type = custom/script

interval = 1

format-padding = 2

exec = ~/scripts/pavolume.sh

click-left = /home/dead/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = /home/dead/.config/polybar/scripts/pavolume.sh --up
scroll-down = /home/dead/.config/polybar/scripts/pavolume.sh --down


[module/powermenu]
type = custom/menu

label-open = 

label-close = cancel

label-close-background = #141021
label-close-foreground = #FF2B91
label-open-padding-left = 2
label-open-padding-right = 1
label-close-padding = 3

menu-0-0 = lock
menu-0-0-exec = ~/scripts/lock.sh
menu-0-0-background = #141021
menu-0-0-foreground = #3EDDF0
menu-0-0-padding-right = 3

menu-0-1 = reboot
menu-0-1-exec = menu-open-1
menu-0-1-background = #141021
menu-0-1-foreground = #3EDDF0
menu-0-1-padding-right = 3

menu-0-2 = power off
menu-0-2-exec = menu-open-2
menu-0-2-background = #141021
menu-0-2-foreground = #3EDDF0
menu-0-2-padding-right = 3

menu-1-0 = reboot?
menu-1-0-exec = reboot
menu-1-0-background = #141021
menu-1-0-foreground = #e4b226
menu-1-0-padding-right = 3

menu-2-0 = power off?
menu-2-0-exec = poweroff
menu-2-0-background = #141021
menu-2-0-foreground = #e4b226
menu-2-0-padding-right = 3



[module/wireless-network]
type = internal/network

interface = wlp4s7

format-connected = <label-connected>
format-connected-padding = 2

format-disconnected = <label-disconnected>
format-disconnected-padding = 2

label-connected =  OK

label-disconnected =  None

[module/spotify]
type = custom/script

interval = 1

exec = ~/scripts/spotify.sh

format-padding = 2
